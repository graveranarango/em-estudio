rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Permitir lectura y escritura solo al usuario autenticado en su propio espacio
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Todo lo dem√°s permanece bloqueado
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
