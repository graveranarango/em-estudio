{
  "emulators": {
    "functions": { "port": 5001 },
    "hosting": { "port": 5005 },
    "firestore": { "port": 8080 },
    "ui": { "enabled": true, "port": 4000 }
  },
  "hosting": {
    "site": "em-estudio",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/make-server-ecf7df64/**",
        "function": "make-server-ecf7df64"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "codebase": "em_estudio",
    "runtime": "nodejs20",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
